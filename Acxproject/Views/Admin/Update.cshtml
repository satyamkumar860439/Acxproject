@model Acxproject.Models.Customer

@{
    ViewData["Title"] = "Update";
}

<style>
    .page-container {
        background: #f4f6f9;
        padding: 40px 0;
        min-height: 100vh; /* full height */
        display: flex;
        justify-content: center; /* center horizontally */
        align-items: center; /* center vertically */
    }

    .card-custom {
        background: conic-gradient()
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        padding: 30px;
        width: 100%;
        max-width: 600px; /* keeps form centered */
    }

    .title-header {
        font-weight: 700;
        color: #34495e;
        margin-bottom: 20px;
        text-align: center;
    }

    .form-section label {
        font-weight: 600;
        color: #333;
    }

    .submit-btn {
        width: 100%;
        font-size: 16px;
        padding: 10px;
        border-radius: 6px;
    }
</style>

<div class="page-container">
    <div class="card-custom">
        <h1 class="title-header">Update Customer</h1>

        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group form-section">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group form-section">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group form-section">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group form-section">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group form-section">
                <label asp-for="Country"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>

            <div class="form-group form-section">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group form-section">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group form-section">
                <label asp-for="Gender"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group form-section">
                <label asp-for="Image"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary submit-btn mt-3">
                Save Changes
            </button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Customer" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
