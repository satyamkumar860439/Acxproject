@model Acxproject.Models.Customer

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white text-center py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        Delete Customer
                    </h4>
                </div>

                <div class="card-body">
                    <h5 class="text-center text-danger fw-bold">
                        Are you sure you want to delete this customer?
                    </h5>

                    <hr />

                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3 fw-bold">Phone</dt>
                        <dd class="col-sm-9">@Model.Phone</dd>

                        <dt class="col-sm-3 fw-bold">Email</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3 fw-bold">Country</dt>
                        <dd class="col-sm-9">@Model.Country</dd>

                        <dt class="col-sm-3 fw-bold">City</dt>
                        <dd class="col-sm-9">@Model.City</dd>

                        <dt class="col-sm-3 fw-bold">Address</dt>
                        <dd class="col-sm-9">@Model.Address</dd>

                        <dt class="col-sm-3 fw-bold">Gender</dt>
                        <dd class="col-sm-9">@Model.Gender</dd>

                        <dt class="col-sm-3 fw-bold">Image</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Image))
                            {
                                <img src="~/images/@Model.Image" class="img-thumbnail" width="120" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </dd>
                    </dl>

                    <div class="text-center mt-4">
                        <form asp-action="deletepermission" method="post">
                            <input type="hidden" asp-for="Id" />

                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash-fill"></i> Confirm Delete
                            </button>

                            <a asp-action="customer" class="btn btn-secondary px-4 ms-2">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                        </form>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
