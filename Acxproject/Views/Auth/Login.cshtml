
<body style="background-image:url('/image/erp.png');background-size:cover;position:center">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">

                    <h3 class="text-center mb-4">Login</h3>

                    <form method="post">

                        <div class="form-group mb-3">
                            <label class="fw-bold">Email</label>
                            <input name="Email" class="form-control form-control-lg" placeholder="Enter your email" />
                        </div>

                        <div class="form-group mb-3">
                            <label class="fw-bold">Password</label>
                            <input name="Password" type="password" class="form-control form-control-lg" placeholder="Enter password" />
                        </div>

                        <p class="text-danger text-center">@ViewBag.Msg</p>

                        <button class="btn btn-success btn-lg w-100 mt-2">Login</button>
                    </form>

                    <div class="text-center mt-3">
                        <a href="/Auth/Register">Create new account</a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
</body>