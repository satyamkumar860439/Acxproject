@model Acxproject.Models.CRMUser



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">

                    <h3 class="text-center mb-4">Create Account</h3>

                    <form method="post">
                        <div class="form-group mb-3">
                            <label class="fw-bold">Name</label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter your name" />
                        </div>

                        <div class="form-group mb-3">
                            <label class="fw-bold">Email</label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email" />
                        </div>

                        <div class="form-group mb-3">
                            <label class="fw-bold">Password</label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter password" />
                        </div>

                        <p class="text-danger text-center">@ViewBag.Msg</p>

                        <button class="btn btn-primary btn-lg w-100 mt-2">Register</button>
                    </form>

                    <div class="text-center mt-3">
                        <a href="/Auth/Login">Already have an account? Login</a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
