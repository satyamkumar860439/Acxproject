@model IEnumerable<Acxproject.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col text-center">
            <h1 class="display-5">Employee List</h1>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Create New Employee
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-primary">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.First().FirstName)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().LastName)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().Phone)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().Position)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().Department)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().Address)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().DateOfBirth)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().Gender)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().HireDate)</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FirstName</td>
                                        <td>@item.LastName</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Position</td>
                                        <td>@item.Department</td>
                                        <td>@item.Address</td>
                                        <td>@item.DateOfBirth.ToString("yyyy-MM-dd")</td>
                                        <td>@item.Gender</td>
                                        <td>@item.HireDate.ToString("yyyy-MM-dd")</td>
                                        <td class="text-center">
                                            <a href="@Url.Action("Details", "Employee", new { id = @item.Id })" class="btn btn-primary">Details</a>
                                            <a href="@Url.Action("Update", "Employee", new { id = @item.Id })" class="btn btn-warning">Update</a>
                                            <a href="@Url.Action("deletepermission", "Employee", new { id = @item.Id })" class="btn btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                @if (!Model.Any())
                {
                    <div class="card-footer text-center text-muted">
                        No employees found.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
