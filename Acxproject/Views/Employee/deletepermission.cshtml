@model Acxproject.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Confirm Delete</h3>
                </div>

                <div class="card-body">
                    <p class="lead text-center text-danger">
                        Are you sure you want to delete this employee?
                    </p>

                    <hr />

                    <!-- Employee Details -->
                    <dl class="row">
                        <dt class="col-sm-4">First Name</dt>
                        <dd class="col-sm-8">@Model.FirstName</dd>

                        <dt class="col-sm-4">Last Name</dt>
                        <dd class="col-sm-8">@Model.LastName</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">Position</dt>
                        <dd class="col-sm-8">@Model.Position</dd>

                        <dt class="col-sm-4">Department</dt>
                        <dd class="col-sm-8">@Model.Department</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Date of Birth</dt>
                        <dd class="col-sm-8">@Model.DateOfBirth.ToShortDateString()</dd>

                        <dt class="col-sm-4">Gender</dt>
                        <dd class="col-sm-8">@Model.Gender</dd>

                        <dt class="col-sm-4">Hire Date</dt>
                        <dd class="col-sm-8">@Model.HireDate.ToShortDateString()</dd>
                    </dl>

                    <!-- Action Buttons -->
                    <form asp-action="DeletePermission" method="post" class="text-center mt-4">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg px-5">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                        <a asp-action="Employee" class="btn btn-secondary btn-lg px-5 ms-2">
                            <i class="bi bi-arrow-left-circle"></i> Cancel
                        </a>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

