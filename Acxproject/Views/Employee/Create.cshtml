@model Acxproject.Models.Employee

@{
    ViewData["Title"] = "Create Employee";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Create New Employee</h3>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- First & Last Name -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                                    <label asp-for="FirstName"></label>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                    <label asp-for="LastName"></label>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Email & Phone -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Email" class="form-control" placeholder="Email" />
                                    <label asp-for="Email"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Phone" class="form-control" placeholder="Phone" />
                                    <label asp-for="Phone"></label>
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Position & Department -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Position" class="form-control" placeholder="Position" />
                                    <label asp-for="Position"></label>
                                    <span asp-validation-for="Position" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Department" class="form-control" placeholder="Department" />
                                    <label asp-for="Department"></label>
                                    <span asp-validation-for="Department" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Address -->
                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="Address" class="form-control" placeholder="Address" />
                                <label asp-for="Address"></label>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Date of Birth & Hire Date -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="Date of Birth" />
                                    <label asp-for="DateOfBirth"></label>
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="HireDate" type="date" class="form-control" placeholder="Hire Date" />
                                    <label asp-for="HireDate"></label>
                                    <span asp-validation-for="HireDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Gender -->
                        <div class="mb-3">
                            <div class="form-floating">
                                <select asp-for="Gender" class="form-select">
                                    <option value="">Select Gender</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Other</option>
                                </select>
                                <label asp-for="Gender"></label>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid mt-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-person-plus-fill"></i> Create Employee
                            </button>
                        </div>

                    </form>
                </div>

                <div class="card-footer text-center">
                    <a asp-action="Employee" class="text-decoration-none">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
